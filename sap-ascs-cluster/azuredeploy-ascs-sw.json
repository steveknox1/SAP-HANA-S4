{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VMName1": {
            "type": "string",
            "metadata": {
                "description": "First VM Name"
            }
        },
        "VMName2": {
            "type": "string",
            "metadata": {
                "description": "Second VM Name"
            }
        },
        "VMUserName": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machines"
            },
            "defaultValue": "testuser"
        },
        "VMPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine"
            }
        },
        "StaticIP1": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the ASCS VM when Static IP Allocation Method has been selected"
            },
            "defaultValue": "10.0.1.17"
        },
        "StaticIP2": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the ERS VM when Static IP Allocation Method has been selected"
            },
            "defaultValue": "10.0.1.18"
        },
        "iSCSIIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the iscsi server"
            },
            "defaultValue": "10.0.2.6"
        },
        "IQN": {
            "type": "string",
            "metadata": {
                "description": "IQN for the iscsi server"
            },
            "defaultValue": "iqn.1991-05.com.microsoft:ascs-target"
        },
        "IQNClient1": {
            "type": "string",
            "metadata": {
                "description": "Client 1 IQN for the iscsi server"
            },
            "defaultValue": "iqn.1991-05.com.microsoft:ascs-target:ascsvm1"
        },
        "IQNClient2": {
            "type": "string",
            "metadata": {
                "description": "Client 2 IQN for the iscsi server"
            },
            "defaultValue": "iqn.1991-05.com.microsoft:ascs-target:ascsvm2"
        },
        "ASCSLBIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the ASCS internal load balancer"
            },
            "defaultValue": "10.0.1.20"
        },
        "ERSLBIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the ERS internal load balancer"
            },
            "defaultValue": "10.0.1.21"
        },
        "customURI": {
            "type": "string",
            "metadata": {
                "description": "URI where SAP bits are uploaded"
            }
        },
        "HANASID": {
            "type": "string",
            "metadata": {
                "description": "SAP HANA System ID"
            }, 
            "defaultValue": "H10"
        },        
        "SubscriptionEmail": {
            "type": "string",
            "metadata": {
                "description": "OS Subscription Email for BYOS, blank for PAYG"
            },
            "defaultValue": ""
        },
        "SubscriptionID": {
            "type": "string",
            "metadata": {
                "description": "OS Subscription ID for BYOS, blank for PAYG"
            },
            "defaultValue": ""
        },
        "SMTUri": {
            "type": "string",
            "metadata": {
                "description": "SMT URI, blank for none"
            },
            "defaultValue": ""
        },
        "NFSILBIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the NFS internal load balancer"
            },
            "defaultValue": "10.0.1.10"
        },
        "ASCSSID": {
            "type": "string",
            "metadata": {
                "description": "System ID for the ASCS"
            },
            "defaultValue": "S40"
        },
        "ASCSINSTANCE": {
            "type": "string",
            "metadata": {
                "description": "Instance Number for the ASCS"
            },
            "defaultValue": "00"
        },
        "SAPINSTGID": {
            "type": "string",
            "metadata": {
                "description": "Group ID for sapinst"
            },
            "defaultValue": "1000"
        },
        "SAPSYSGID": {
            "type": "string",
            "metadata": {
                "description": "Group ID for sapsys"
            },
            "defaultValue": "1001"
        },
        "SAPADMUID": {
            "type": "string",
            "metadata": {
                "description": "Userid for sapadm"
            },
            "defaultValue": "1040"
        },
        "SIDADMUID": {
            "type": "string",
            "metadata": {
                "description": "Userid for sidadm"
            },
            "defaultValue": "1050"
        },
        "SAPPASSWD": {
            "type": "string",
            "metadata": {
                "description": "PASSWORD for the SAP users"
            }
        },
        "ERSINSTANCE": {
            "type": "string",
            "metadata": {
                "description": "Instance number for the ERS"
            },
            "defaultValue": "01"
        },
        "DBHOST": {
            "type": "string",
            "metadata": {
                "description": "Host name for the database"
            },
            "defaultValue": "hanailb"
        },
        "DBIP": {
            "type": "string",
            "metadata": {
                "description": "IP Address for the database"
            },
            "defaultValue": "10.0.0.22"
        },
        "DBINSTANCE": {
            "type": "string",
            "metadata": {
                "description": "instance number for the database"
            },
            "defaultValue": "00"
        },
        "CONFIGURESAP": {
            "type": "string",
            "metadata": {
                "description": "yes to install SAP ascs, no for basic setup and cluster"
            },
            "defaultValue": "yes",
            "allowedValues": [
                "yes",
                "no"
            ]            
        },        
        "CONFIGURECRM": {
            "type": "string",
            "metadata": {
                "description": "yes to configure cluster manager config for ascs, no for basic cluster"
            },
            "defaultValue": "no",
            "allowedValues": [
                "yes",
                "no"
            ]            
        },
        "CONFIGURESCHEMA": {
            "type": "string",
            "metadata": {
                "description": "yes to configure SAP db schema, no to skip"
            },
            "defaultValue": "yes",
            "allowedValues": [
                "yes",
                "no"
            ]            
        },        
        "SAPBITSMOUNT": {
            "type": "string",
            "metadata": {
                "description": "NFS mount point for sapbits"
            },
            "defaultValue": "10.1.0.5:/hana/backup/SapBits"
        },
        "SAPMNTMOUNT": {
            "type": "string",
            "metadata": {
                "description": "NFS mount point for /sapmnt"
            },
            "defaultValue": "10.1.0.5:/sapmnt/S4N"
        },
        "USRSAPSIDMOUNT": {
            "type": "string",
            "metadata": {
                "description": "nfs mount point for /usr/sap/S4N/SYS"
            },
            "defaultValue": "10.1.0.5:/usr/sap/S4N/ASCS"
        },
        "SAPTRANSMOUNT": {
            "type": "string",
            "metadata": {
                "description": "nfs mount point for /usr/sap/trans"
            },
            "defaultValue": "10.1.0.5:/usr/sap/trans"
        },        
        "USRSAPASCSMOUNT": {
            "type": "string",
            "metadata": {
                "description": "nfs mount point for /usr/sap/SID/ASCSinstance"
            },
            "defaultValue": "10.1.0.5:/usr/sap/S4N/ASCS"
        },
        "USRSAPERSMOUNT": {
            "type": "string",
            "metadata": {
                "description": "nfs mount point for /usr/sap/SID/ERSinstance"
            },
            "defaultValue": ""
        },
        "SAPSOFTWARETODEPLOY": {
            "type": "string",
            "metadata": {
                "description": "Which SAP software to deploy in the app tier"
            },
            "defaultValue": "S4 2020",
            "allowedValues": [
                "NONE",
                "S4 2020",
                "IDES 1610"
            ]            
        }
    },
    "variables": {
        "vmName1": "[toLower(parameters('vmName1'))]",
        "vmName2": "[toLower(parameters('vmName2'))]",
        "baseUri": "https://raw.githubusercontent.com/steveknox1/SAP-HANA-S4/master/sap-ascs-cluster",
        "repoUri": "[variables('baseUri')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmName1'),'/', 'CustomScript')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/steveknox1/SAP-HANA-S4/master/sap-ascs-cluster/allvmsizes-ascs-cluster.sh"
                    ],
                    "commandToExecute": "[concat('bash allvmsizes-ascs-cluster.sh \"', parameters('vmUserName'), '\"  \"', parameters('vmPassword'), '\"  \"', variables('vmName1'), '\"  \"',variables('vmName2'), '\"  \"',parameters('StaticIP1'), '\"  \"',parameters('StaticIP2'), '\" \"yes\" \"',parameters('customURI'),'\" \"', parameters('HANASID'),'\" \"',variables('repoUri'),'\" \"',parameters('ISCSIIP'),'\" \"',parameters('IQN'),'\" \"',parameters('IQNClient1'),'\" \"',parameters('ASCSLBIP'),'\" \"',parameters('ERSLBIP'), '\" \"',parameters('SubscriptionEmail'), '\" \"', parameters('SubscriptionID'),'\" \"', parameters('SMTUri'),'\" \"', parameters('NFSILBIP'),'\" \"', parameters('ASCSSID'),'\" \"', parameters('ASCSINSTANCE'),'\" \"', parameters('SAPINSTGID'),'\" \"', parameters('SAPSYSGID'),'\" \"', parameters('SAPADMUID'),'\" \"', parameters('SIDADMUID'),'\" \"', parameters('SAPPASSWD'),'\" \"', parameters('ERSINSTANCE'),'\" \"', parameters('DBHOST'),'\" \"', parameters('DBIP'),'\" \"', parameters('DBINSTANCE'),'\" \"', parameters('ASCSLBIP'),'\" \"', parameters('CONFIGURESAP'),'\" \"', parameters('CONFIGURECRM'),'\" \"', parameters('CONFIGURESCHEMA'),'\" \"', parameters('SAPBITSMOUNT'),'\" \"', parameters('SAPMNTMOUNT'),'\" \"', parameters('USRSAPSIDMOUNT'),'\" \"', parameters('SAPTRANSMOUNT'),'\" \"', parameters('USRSAPASCSMOUNT'),'\" \"', parameters('USRSAPERSMOUNT'),'\" \"', parameters('SAPSOFTWARETODEPLOY'),'\"')]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmName2'),'/', 'CustomScript')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/steveknox1/SAP-HANA-S4/master/sap-ascs-cluster/allvmsizes-ascs-cluster.sh"
                    ],
                    "commandToExecute": "[concat('bash allvmsizes-ascs-cluster.sh \"', parameters('vmUserName'), '\"  \"', parameters('vmPassword'), '\"  \"', variables('vmName2'), '\"  \"',variables('vmName1'), '\"  \"',parameters('StaticIP2'), '\"  \"',parameters('StaticIP1'), '\" \"no\" \"',parameters('customURI'),'\" \"', parameters('HANASID'),'\" \"',variables('repoUri'),'\" \"',parameters('ISCSIIP'),'\" \"',parameters('IQN'),'\" \"',parameters('IQNClient2'),'\" \"',parameters('ASCSLBIP'),'\" \"',parameters('ERSLBIP'), '\" \"',parameters('SubscriptionEmail'), '\" \"', parameters('SubscriptionID'),'\" \"', parameters('SMTUri'),'\" \"', parameters('NFSILBIP'),'\" \"', parameters('ASCSSID'),'\" \"', parameters('ASCSINSTANCE'),'\" \"', parameters('SAPINSTGID'),'\" \"', parameters('SAPSYSGID'),'\" \"', parameters('SAPADMUID'),'\" \"', parameters('SIDADMUID'),'\" \"', parameters('SAPPASSWD'),'\" \"', parameters('ERSINSTANCE'),'\" \"', parameters('DBHOST'),'\" \"', parameters('DBIP'),'\" \"', parameters('DBINSTANCE'),'\" \"', parameters('ASCSLBIP'),'\" \"', parameters('CONFIGURESAP'),'\" \"', parameters('CONFIGURECRM'),'\" \"', parameters('CONFIGURESCHEMA'),'\" \"', parameters('SAPBITSMOUNT'),'\" \"', parameters('SAPMNTMOUNT'),'\" \"', parameters('USRSAPSIDMOUNT'),'\" \"', parameters('SAPTRANSMOUNT'),'\" \"', parameters('USRSAPASCSMOUNT'),'\" \"', parameters('USRSAPERSMOUNT'),'\" \"', parameters('SAPSOFTWARETODEPLOY'),'\"')]"
                }
            }
        }
    ]
}
